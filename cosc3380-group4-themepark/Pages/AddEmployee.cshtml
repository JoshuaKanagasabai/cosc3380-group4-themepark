@model cosc3380_group4_themepark.Pages.AddEmployeeModel 
@{}

    <div>
        <h3>Adding Employee</h3>

        <form method="post" asp-page-handler="AddEmployee">
            <label for="fname">First name:</label><br>
            <input type="text" class="form-control" name="fname"><br>
            <label for="lname">Last name:</label><br>
            <input type="text" class="form-control" name="lname">
            <br>

            <p>Gender:</p>
            <input type="radio" name="gender" value="F">
            <label for="F">Female</label><br>
            <input type="radio" name="gender" value="M">
            <label for="M">Male</label><br>
            <br>

            <label for="ssn">Social Security Number:</label>
            <br>
            <input type="number" class="form-control" name="ssn" placeholder="XXXXXXXXX" min="100000000" max="999999999">
            <br>



            <!----<label for="supervisor_ssn"> Supervisor: </label><br>-->

            <label for="supervisor_ssn"> Supervisor: </label> <br>
            <select name="supervisor_ssn">

                @foreach (var supervisor in Model.supervisors)
                {
                    <option value=@supervisor.ssn>@supervisor.last_four @supervisor.fname @supervisor.lname</option>
                }

            </select>
            <div class="form-group">
                <label for="address">Address</label>
                <input type="text" name="address" class="form-control" placeholder="1234 MAIN DR , ST, ZIP">
            </div>

