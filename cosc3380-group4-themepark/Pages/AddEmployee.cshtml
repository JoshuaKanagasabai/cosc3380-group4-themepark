@page
@model AddEmployeeModel
@{

    <div>
        <h3>Adding Employee</h3>

        <form method="post" asp-page-handler="AddEmployee">
            <label for="fname">First name:</label><br>
            <input type="text" id="fname" name="fname"><br>
            <label for="lname">Last name:</label><br>
            <input type="text" id="lname" name="lname">
            <br>

            <p>Gender:</p>
            <input type="radio" id="female" name="gender" value="F">
            <label for="f">Female</label><br>
            <input type="radio" id="male" name="gender" value="M">
            <label for="M">Male</label><br>
            <br>

            <label for="ssn">Social Security Number:</label>
            <br>
            <input type="number" id="ssn" name="ssn" placeholder="XXX-XX-XXXX">
            <br>

            <label for="supervisor_ssn"> Supervisor Social Security Number:</label>
            <br>
            <input type="number" id="supervisor_ssn" name="supervisor_ssn" placeholder="XXX-XX-XXXX">
            <br>

            <div class="form-group">
                <label for="inputAddress">Address</label>
                <input type="text" class="form-control" id="inputAddress" placeholder="1234 Main St">
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="inputCity">City</label>
                    <input type="text" class="form-control" id="inputCity">
                </div>
                <div>

                    <label for="state">State:</label><br>
                    <input type="text" id="state" name="state"><br>



                </div>
                <div class="form-group col-md-2">
                    <label for="inputZip">Zip</label>
                    <input type="text" class="form-control" id="inputZip">
                </div>
            </div>
            <br>

            <label for="date_joined">Joining Date: </label><br>
            <input type="date" id="date_joined" name="date_joined"><br>

            <label for="dept_id">Department ID: </label><br>
            <input type="text" id="dept_id" name="dept_id"><br>

            <input type="checkbox" id="salaried" name="vehicle1" value="Salaried">
            <label for="salaried"> salaried</label><br>

            <label for="payrate">Payrate: </label><br>
            <input type="number" id="payrate" name="payrate"><br>

            <label for="role">Role: </label><br>
            <input type="text" id="role" name="role"><br>

            <label for="vacation_days">Vacation Days: </label><br>
            <input type="number" id="vacation_days" name="vacation_days"><br>



            <input type="submit" value="Submit">


        </form>




            </div>


}

