            <label for="payrate">Payrate: </label><br>
            <input type="number" class="form-control" name="payrate" step="0.01" <br>

            <label for="role">Role: </label><br>
            <input type="text" class="form-control" name="role"><br>

            <label for="vacation_days">Vacation Days: </label><br>
            <input type="number" class="form-control" name="vacation_days"><br>

            <label for="db_user">Username: </label><br>
            <input type="text" class="form-control" name="db_user" required><br>

