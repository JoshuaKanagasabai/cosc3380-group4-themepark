            <br>

            <label for="phone">Phone Number: </label>
            <br>
            <input type="number" class="form-control" name="phone" placeholder="XXXXXXXXXX" min="1000000000">
            <br>


            <label for="date_joined">Joining Date: </label><br>
            <input type="date" class="form-control" name="date_joined"><br>

            <label for="dept_id"> Department Name</label><br>

            <select name="dept_id">

                @foreach (var department in Model.departments)
                {
                    <option value=@department.dept_id>@department.dept_name</option>
                }
            </select>
            <br>
